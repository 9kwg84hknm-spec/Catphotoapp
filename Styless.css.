/* h1 üçün stil */
h1 {
  color: blue;           /* Mətn rəngi */
  margin: 20px;          /* Xarici boşluq */
  padding: 10px;         /* Daxili boşluq */
  border: 2px solid black; /* Sərhəd */
}

/* h2 üçün stil */
h2 {
  color: green;
  margin: 15px;
  padding: 5px;
  border: 1px dashed gray;
}

